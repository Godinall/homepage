  <script>


  $(document).ready(function(){
          var editpostid = undefined;
          var fetchPosts = function() {
              $.post('<?php echo $this->baseUrl("/blog/fetch-posts")?>',
                     function(data){$('#post-list').html(data)});
          };

          fetchPosts();
          $("#dialog").dialog({
              autoOpen: false,
              modal: true
          });


          var editPosts = function() {
              $("#addpost").hide();
              fetchPosts();
              $("#post-list").show();
              $("#editpost").hide();
              $("#radio2").attr("checked","checked").button("refresh");
              $("button[name='back']").hide();              
          }
          $('#notification').hide();
          $('#addpost').hide();
          $('#editpost').hide();

          editPosts();
          $('.blogpost').live('click',function(){
                  $editpostid = $(this).attr('id');
                  var editposttitle = $(this).text();
                  $('#editpost').show();
                  $('#post-list').hide();
                  $.post('<?php echo
                          $this->baseUrl("/blog/fetch-single-post")?>',{
                            id: $editpostid,
                                 }, function(data){
                             $('input#edit-post-title').val(editposttitle);
                             $('#edit-post-content').val(data)});
                  $("button[name='back']").show();              
                  return false;
              });
          $('#preview-post').click(function(){
                  window.open('<?php echo $this->baseUrl("/blog")?>');
              });
          $('input[type=radio]').change(function(){

                  if ($("#radio1:checked").val()){
                      $("#addpost").show();
                      $("#editpost").hide();
                      $("#post-list").hide();
                      $("button[name='back']").hide();              
                  }
                  else {
                      editPosts();
                  }
                  return false;
              });
          
          $("button[name='back'],button#cancel-edit").click(function() {
                  editPosts();
                  return false;
              });

          $('#post').click(function() {
                  $title = $('input#post-title').val();
                  $postcontent = $('textarea#post-content').val();
                  $.post('<?php echo $this->baseUrl("/blog/add-post")?>',{
                      title: $title,
                              content: $postcontent,
                              type: 'blog-post'
                              }, function(data){
                          editPosts();
                          $('#notification').addClass("ui-state-highlight");
                          $('#notification').html("Post added!");
                          $('#notification').show().fadeOut(1600);
                          
                          ;});

                  return false;
              });

          var deletePost = function() {

                  $.post('<?php echo $this->baseUrl("/blog/delete-post")?>',{
                      id: $editpostid,
                  }, function(data){
                          editPosts();
                          $('#notification').addClass("ui-state-error");
                          $('#notification').html("Post deleted!");
                          $('#notification').show().fadeOut(1600);
                  });
          };

          $('#delete-post').click(function() {
                  $("#dialog").dialog({
                      buttons : {
                              "Confirm" : function() {
                                  $(this).dialog("close");
                                  deletePost();
                              },
                              "Cancel" : function() {
                                  $(this).dialog("close");
                                  return false;
                              }
                          }
                      });

                  $("#dialog").dialog("open");

                  return false;
              });

          $('#update-post').click(function() {
                  $title = $('input#edit-post-title').val();
                  $postcontent = $('textarea#edit-post-content').val();
                  $.post('<?php echo $this->baseUrl("/blog/update-post")?>',{
                      id: $editpostid,
                      title: $title,
                              content: $postcontent,
                              type: 'blog-post'
                              }, function(data){
                          $('#notification').removeClass("ui-state-error").addClass("ui-state-highlight");                          
                          $('#notification').html("Post updated!");
                          $('#notification').show().fadeOut(1600);
                          });

                  return false;
              });

	$(function() {
          $('#radio').buttonset();
          $('#radio1').button({icons: {primary: "ui-icon-plusthick"}});
          $('#radio2').button({icons: {primary: "ui-icon-pencil"}});
          $("button[name='back']").button({icons: {primary: "ui-icon-arrowreturnthick-1-w"}});
          $("button").button();
          

		$( "a", ".ui" ).click(function() { return false; });
	});

  });
	</script>     

<h1>Blog Admin</h1>
<br>
<div class="ui">
<div style="display:inline" id="radio">
		<input class="button" type="radio" id="radio1" name="radio" /><label for="radio1">Add New Post</label>
		<input class="button" type="radio" id="radio2" name="radio" checked="checked" /><label id="edit-posts" for="radio2">Edit posts</label>
</div>
<button name="back">Back</button>
</div>
<br/> 

<div id="addpost">

<input style="font-size: 20px" id="post-title" type="text">
<textarea id="post-content" rows="10" name="post-content"></textarea>
<div class="buttons">
<button id="post" class="ui" >Post</button>
</div>
</div>

<div id="post-list">

</div>

<div id="editpost">

<input style="font-size: 20px" id="edit-post-title" type="text">

<textarea id="edit-post-content" rows="10" name="edit-post-content"></textarea>

<button class="ui" id="update-post">Update</button>

<button class="ui" id="preview-post">Preview</button>

<button class="ui" id="cancel-edit">Cancel</button>


<button class="ui" id="delete-post">Delete Post</button>



</div>

<div id="notification" class="ui-state-highlight">
<br>
</div>


<div id="dialog" title="Confirm Deletion" style="font-size: 12px">
  Are you sure you want to delete this post?
</div>